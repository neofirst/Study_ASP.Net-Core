@model FormDataAnnotationsAndBinding.Models.MaximModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>플러그인 기반 클라이언트 측 유효성 검사</title>
    <style>
        .input-validation-error {
            border: 1px solid red;
        }
    </style>
</head>
<body>
    <h2>플러그인 기반 클라이언트 측 유효성 검사</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(false)

        @Html.LabelFor(n => n.Name)
        <text>:</text>
        @Html.TextBoxFor(n => n.Name)<br />
        @Html.ValidationMessageFor(n => n.Content)<br />

        @Html.LabelFor(c => c.Content)
        <text>:</text>
        @Html.TextBoxFor(c => c.Content)<br />
        @Html.ValidationMessageFor(c => c.Content)<br />

        <input type="submit" value="전송" />
    }
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
