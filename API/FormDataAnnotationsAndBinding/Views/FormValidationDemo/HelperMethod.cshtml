@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>헬퍼 메서드</title>
    <script>
            function CheckForm() {
                var name = document.getElementById("txtName");
                var content = document.getElementById("txtContent");
                if (name.value.length < 1) {
                    window.alert("이름을 확인하세요.");
                    name.focus();
                    name.select();
                    return false;
                }
                if (content.value.length < 1) {
                    window.alert("내용을 확인하세요.");
                    content.focus();
                    content.select();
                    return false;
                }
                return true;
            }
    </script>
</head>
<body>
    <h2>헬퍼 메서드 폼 구성</h2>
    @*액션, 컨트롤러, 라우팅변수, 폼 전송 방식, 추가 속성들*@
    @using (Html.BeginForm("HelperMethod", "FormValidationDemo", new { },
                            FormMethod.Post, false, new
                            {
                                @class = "FormStyle",
                                data_ng_test = "test",
                                onsubmit = "return CheckForm();"
                            }))
    {
        <text>이름</text>@Html.TextBox("txtName")<br />
        <text>내용</text>@Html.TextBox("txtContent")<br />
        <input type="submit" value="입력" />
    }
    @if (ViewBag.ResultString != null)
    {
        @ViewBag.ResultString
    }
</body>
</html>
